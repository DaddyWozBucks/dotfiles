#!/bin/sh

set -ex

for dir in "${DOTFILES_ROOT}"/*;
do
	(cd $dir; git pull)
done

brew upgrade
brew cask upgrade
brew cleanup

echo "--> Updating Brews"
for brewfile in "${DOTFILES_ROOT}"/itsmycargo/Brewfile "${DOTFILES_ROOT}"/local/Brewfile;
do
  $(command -v brew) bundle install --file="${brewfile}"
done
